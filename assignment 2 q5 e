#include <iostream>
using namespace std;

class SymmetricMatrix {
    int *A;
    int n;
public:
    SymmetricMatrix(int size) {
        n = size;
        A = new int[n*(n+1)/2];
    }

    void set(int i, int j, int x) {
        if (i >= j)
            A[(i*(i-1))/2 + j - 1] = x;
        else
            A[(j*(j-1))/2 + i - 1] = x;  
    }

    int get(int i, int j) {
        if (i >= j)
            return A[(i*(i-1))/2 + j - 1];
        else
            return A[(j*(j-1))/2 + i - 1];
    }

    ~SymmetricMatrix() {
        delete[] A;
    }
};

int main() {
    int n = 4;
    SymmetricMatrix sm(n);
    sm.set(1,1,5);
    sm.set(2,1,7);
    sm.set(2,2,9);
    sm.set(3,1,3);
    sm.set(3,2,6);
    sm.set(3,3,8);
    sm.set(4,1,1);
    sm.set(4,2,4);
    sm.set(4,3,2);
    sm.set(4,4,10);

    for (int i=1; i<=n; i++) {
        for (int j=1; j<=n; j++) {
            cout << sm.get(i,j) << " ";
        }
        cout << endl;
    }
    return 0;
}
