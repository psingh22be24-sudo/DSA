#include <iostream>
#include <vector>
#include <stack>
using namespace std;

vector<int> nearestSmallerToLeft(const vector<int>& A) {
    vector<int> result;
    stack<int> s;

    for (int val : A) {
        while (!s.empty() && s.top() >= val) {
            s.pop();
        }

        if (s.empty())
            result.push_back(-1);
        else
            result.push_back(s.top());

        s.push(val);
    }

    return result;
}

int main() {
    vector<int> A = {4, 5, 2, 10, 8};
    vector<int> ans = nearestSmallerToLeft(A);

    cout << "Nearest smaller elements to the left:\n";
    for (int x : ans) {
        cout << x << " ";
    }
    cout << "\n";

    return 0;
}
