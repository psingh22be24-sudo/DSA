#include <iostream>
using namespace std;

class UpperTriangular {
    int *A;
    int n;
public:
    UpperTriangular(int size) {
        n = size;
        A = new int[n*(n+1)/2];
    }

    void set(int i, int j, int x) {
        if (i <= j)
            A[(i-1)*n - ((i-2)*(i-1))/2 + (j - i)] = x;
    }

    int get(int i, int j) {
        if (i <= j)
            return A[(i-1)*n - ((i-2)*(i-1))/2 + (j - i)];
        else
            return 0;
    }

    ~UpperTriangular() {
        delete[] A;
    }
};

int main() {
    int n = 4;
    UpperTriangular ut(n);
    ut.set(1,1,5);
    ut.set(1,2,7);
    ut.set(1,3,9);
    ut.set(1,4,6);
    ut.set(2,2,8);
    ut.set(2,3,10);
    ut.set(2,4,11);
    ut.set(3,3,12);
    ut.set(3,4,13);
    ut.set(4,4,14);

    for (int i=1; i<=n; i++) {
        for (int j=1; j<=n; j++) {
            cout << ut.get(i,j) << " ";
        }
        cout << endl;
    }
    return 0;
}
