#include <iostream>
using namespace std;

class TriDiagonal {
    int *A;
    int n;
public:
    TriDiagonal(int size) {
        n = size;
        A = new int[3*n - 2];
    }

    void set(int i, int j, int x) {
        if (i - j == 1)          
            A[n + i - 2] = x;
        else if (i - j == 0)     
            A[i - 1] = x;
        else if (i - j == -1)    
            A[2*n + i - 2] = x;
    }

    int get(int i, int j) {
        if (i - j == 1)
            return A[n + i - 2];
        else if (i - j == 0)
            return A[i - 1];
        else if (i - j == -1)
            return A[2*n + i - 2];
        else
            return 0;
    }

    ~TriDiagonal() {
        delete[] A;
    }
};

int main() {
    int n = 4;
    TriDiagonal tm(n);
    tm.set(1,1,5);
    tm.set(1,2,3);
    tm.set(2,1,1);
    tm.set(2,2,6);
    tm.set(2,3,7);
    tm.set(3,2,4);
    tm.set(3,3,8);
    tm.set(3,4,9);
    tm.set(4,3,2);
    tm.set(4,4,10);

    for (int i=1; i<=n; i++) {
        for (int j=1; j<=n; j++) {
            cout << tm.get(i,j) << " ";
        }
        cout << endl;
    }
    return 0;
}
